doctype html
html(lang='en')
	include ../common/head.pug
	+head("Login")
	body
		header
			include ../common/navbar.pug
			+navbar()
			.container
				.row
					.col-sm-12.offset-md-2.col-md-8
						.jumbotron
							h2.text-center Log In
							.row
								.col-sm-12.col-md-12.col-xs-12
									form(action="/login", method="POST")
										div.formgroup
											label.small.mb-1.mt-3 Email:
											input(placeholder="Please enter your email address.", required=true, name="email", type="email", value="").form-control
											label.small.mb-1.mt-3 Password:
											input(placeholder="Please enter your current password.", required=true, name="password", type="password", value="").form-control
											button.mt-3.btn.btn-primary(type="submit") Log In
											p.mt-2.mb-0
												| Forgot your password? #[a(href="/#") Reset it here].
											p.mt-2.mb-0
												| Don't have an account? #[a(href="/signup") Create one here].
		include ../common/footer.pug
		+footer()